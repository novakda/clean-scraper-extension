{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./lib/*"],
      "@components/*": ["./components/*"],
      "@tests/*": ["./tests/*"],
      "@examples/*": ["./examples/*"]
    },
    "types": ["vite/client"],
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": [
    "**/*.ts",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".output"
  ],
  "vueCompilerOptions": {
    "target": "ES2020"
  }
}
